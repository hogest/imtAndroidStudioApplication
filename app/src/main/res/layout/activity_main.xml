<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/one"
    >

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Введите данные..."

        android:textAlignment="center"
        android:textColor="@color/free"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="58dp"
        android:layout_marginTop="50sp"
        />

    <EditText
        android:id="@+id/tall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/four"
        android:ems="10"
        android:hint="Ваш рост"
        android:inputType="number"
        android:textColorHint="@color/free"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="176dp"
        android:layout_marginTop="30sp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/ves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/four"
        android:ems="10"
        android:hint="Ваш вес"
        android:textAlignment="center"
        android:textColorHint="@color/free"
        android:textSize="20sp"
        android:layout_marginTop="50sp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="268dp"
        android:inputType="number"
        />


    <Button
        android:id="@+id/main_btn"
        android:layout_marginTop="100sp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Рассчитать"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/two"


        />



</TableLayout>